<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="MAGASIN POUR VENTE DES OUTIALLAGES">
    <meta name="LABIDI" content="">
    <meta name="generator" content="ABDOTOOLS v1.0.0">
    <title>{% block title %} Abdo Tools {% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/carousel.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">


    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
    <!-- Custom styles for this template -->
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg shadow navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="{{ path('home') }}">Abdo Tools</a>
        <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">

                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Qui sommes-nous? </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('products') }}" >Nos produits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contacts</a>
                    </li>
                </ul>
            <div class="navbar-nav">
                {# verifie si le user est loggé    path c'est le nom de la route #}
                {% if app.user %}
                    <div class="nav-item dropdown bg-black">
                        <a class="nav-link dropdown-toggle" href="{{ path('account') }}"  id="navbarDropdown" data-toggle="dropdown">{{ app.user.firstname }} <i class="fas fa-user"></i></a>
                        <div class="dropdown-menu bg-black">
                            <a class="dropdown-item" href="{{ path('account') }}">Mon Compte</a>
                            <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnecté</a>
                        </div>
                    </div>
                {% else %}
                    <div class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" href="{{ path('register') }}">S'inscrir</a>
                    </div>
                {% endif %}
                <a class="nav-link" href="{{ path('cart') }}"><i class="fas fa-shopping-cart"></i></a>
            </div>
        </div>
    </nav>
</header>

<main role="main">
    {% if block ('carousel') is defined %}
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for key,header in headers%}
                <li data-target="#myCarousel" data-slide-to="{{ key }}" {% if key == 0 %} class="active" {% endif %}></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% for key, header in headers %}
                <div class="carousel-item {% if key == 0 %}active {% endif %}" style="background: url('/abdotoolss/public/uploads/{{ header.illustratio }}'); background-size:cover">
                    
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <h1>{{ header.title }}</h1>
                            <p>{{ header.content  }}</p>
                            <p><a class="btn btn-lg btn-primary" href="{{ header.btnUrl }}" role="button">{{ header.btnTitle }}</a></p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    {% endif %}

    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <!--si block carousel n'est pas défini , ajouter un margin top mt-5-->
    <div class="container marketing {% if block ('carousel') is not defined %} mt-5 {% endif %}" >

        <!-- Three columns of text below the carousel -->
        {% block content %}
        {% endblock %}




    </div><!-- /.container -->

    <!-- FOOTER -->
    <footer class="bg-dark footer-custom">
        <p>
           Abdotools@2022 &middot;
            <small><a href="#">Privacy</a> &middot; <a href="#">Terms</a></small>
        </p>
    </footer>
</main>
<script src="{{ asset('assets/js/jquery.js') }}"></script>
<script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
</body>
</html>