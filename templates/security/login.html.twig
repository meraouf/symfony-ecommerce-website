{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block content %}
    <div class="block-small">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Veuillez connecter</h1>
            <label for="inputEmail">Votre Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email"
                   required autofocus placeholder="Veuillez saisir votre email">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required
                   placeholder="Veillez saisir votre mot de passe">

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >


            <button class="btn btn-sm btn-primary mt-2" type="submit">
                Se Connecter
            </button>
            <hr>
            <p class="text-center" ><a href="{{ path('reset_password') }}">Mot de passe oublier</a></p>
            <p class="text-center" >Ou souhaitez-vous <a href="{{ path('register') }}">cr√©er un compte</a></p>
        </form>

    </div>
{% endblock %}

